<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Leasing Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="d-flex flex-column min-vh-100">


    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Leasing Management System", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Clients", "Index", "Clients", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Suppliers", "Index", "Suppliers", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Branches", "Index", "Branches", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Drivers", "Index", "Drivers", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Vehicles", "Index", "Vehicles", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Leases", "Index", "Leases", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

   
    <div class="container body-content flex-grow-1">
        @RenderBody()
        <hr />
    </div>

   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

 
    <footer class="text-white text-center text-lg-start mt-auto" style="background-color: #23242a;">
        <div class="container-fluid p-4">
            <div class="row mt-4">
              
                <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">About Application</h5>
                    <p>This Leasing Management Application was developed by Ayanda Mthombeni using ASP.NET MVC and SQL Server.</p>
                    <p>Powered by the MVC architecture.</p>
                </div>

                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                
                </div>

              
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <ul class="fa-ul ms-3">
                        <li class="mb-3"><span class="fa-li"><i class="fas fa-home"></i></span> Gauteng, South Africa</li>
                        <li class="mb-3"><span class="fa-li"><i class="fas fa-envelope"></i></span> AyandaMthombeni13@gmail.com</li>
                        <li class="mb-3"><span class="fa-li"><i class="fas fa-phone"></i></span> 068 176 7792</li>
                        <li class="mb-3"><span class="fa-li"><i class="fas fa-print"></i></span> Junior Software Developer</li>
                    </ul>
                </div>
            </div>
        </div>

       
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            &copy; @DateTime.Now.Year Ayanda Ashley Mthombeni
        </div>
    </footer>

</body>
</html>
