@model IEnumerable<Rosond_Web_Application.Models.Lease>

@{
    ViewBag.Title = "Lease Records";
}

<h2>Lease Records</h2>

@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["DeleteMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["EditMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["EditMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<p>
    @using (Html.BeginForm("Browse", "Leases", FormMethod.Get))
    {
        <div class="mb-3 d-flex flex-column flex-md-row gap-2">
            <input type="text" name="searchTerm" class="form-control"
                   value="@Request.QueryString["searchTerm"]"
                   placeholder="Search by client, driver, vehicle, branch..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    }
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<!-- Responsive Table -->
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Client</th>
                <th>Driver Name</th>
                <th>Vehicle Make</th>
                <th>Lease Start Date</th>
                <th>Lease End Date</th>
                <th>Lease Amount</th>
                <th>Supplier</th>
                <th>Branch</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Client.CompanyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Driver.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Vehicle.Make)</td>
                    <td>@item.LeaseStartDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.LeaseEndDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.LeaseAmount.ToString("C")</td>
                    <td>@Html.DisplayFor(modelItem => item.Vehicle.Supplier.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Vehicle.Branch.BranchName)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LeaseId }, new { @class = "btn btn-sm btn-outline-primary" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LeaseId }, new { @class = "btn btn-sm btn-outline-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.LeaseId }, new { @class = "btn btn-sm btn-outline-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
