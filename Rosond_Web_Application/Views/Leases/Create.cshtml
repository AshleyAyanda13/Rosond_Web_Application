@model Rosond_Web_Application.Models.Lease

@{
    ViewBag.Title = "Create new Lease Record";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Lease</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.LeaseStartDate)
        @Html.TextBoxFor(model => model.LeaseStartDate, new { @type = "datetime-local", @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LeaseEndDate)
        @Html.TextBoxFor(model => model.LeaseEndDate, new { @type = "datetime-local", @class = "form-control" })

    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LeaseAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LeaseAmount, new { htmlAttributes = new { @class = "form-control",placeholder="e.g 100" } })
                @Html.ValidationMessageFor(model => model.LeaseAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VehicleId, "Vehicle", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VehicleId", null, "-- Select Vehicle --", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClientId, "Client", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClientId", null, "-- Select Client --", new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DriverId, "Driver", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                  @Html.DropDownList("DriverId", null, "-- Select Driver --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DriverId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

